package data;

import Std.parseInt;

using StringTools;

function parseLevel( level:String ) {
	final lines = level.replace( "\t", "" ).replace( "\r", "" ).split( "\n" );
	final alarmRounds = parseInt( lines[0] );
	return { alarmRounds: alarmRounds, map: lines.slice( 1 ) }
}

